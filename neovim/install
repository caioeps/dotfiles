#!/usr/bin/env bash

set -e

sudo chown -R $(whoami) ~/.vim
git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim || echo 'Vundle dir already exists.'
sudo apt-get install -y software-properties-common
sudo add-apt-repository ppa:neovim-ppa/stable
sudo apt update
sudo apt install -y neovim ttf-ancient-fonts
sudo apt-get install -y python-dev python-pip python3-dev python3-pip
sudo apt install ctags
npm install -g neovim
npm install -g typescript
pip2 install neovim
pip3 install neovim

DIR=$(dirname "$(readlink -f "$0")")

mkdir -p /home/$USER/.config/nvim
cp $DIR/.nvimrc /home/$USER/.config/nvim/init.vim

echo 'Done.'
